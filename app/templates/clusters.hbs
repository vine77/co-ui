<div class="box box-primary">
  <div class="box-header">
    <i class="fa fa-cloud"></i>
    <h3 class="box-title">OpenStack Clusters</h3>
  </div>
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <th>Name</th>
        <th>Status</th>
        <th>Health</th>
        <th class="show-when-expanded">Details</th>
        <th>SAA Appliances</th>
      </thead>
      <tbody>
        {{#each}}
          <tr>
            <td>{{name}}</td>
            <td>{{status}}</td>
            <td>
              {{#if ipms}}
                <span {{bind-attr title="systemHealthMessage"}} {{bind-attr class="systemHealthMessage:hasTooltip :inline-block"}}>
                  <i {{bind-attr class="systemHealthIcon"}}></i>
                  {{capitalize-text systemHealthType}}
                </span>
              {{else}}
                N/A
              {{/if}}
            </td>
            <td class="show-when-expanded">{{{details}}}</td>
            <td>
              {{#if ipms}}
                {{#each ipm in ipms}}
                  {{#link-to 'ingredient'}}
                    {{ipm.name}}
                  {{/link-to}}
                {{/each}}
              {{else}}
                Not assigned
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
