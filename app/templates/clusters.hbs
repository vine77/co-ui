<div class="box box-primary">
  <div class="box-header">
    <i class="fa fa-cloud"></i>
    <h3 class="box-title">Clusters</h3>
  </div>
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <th>Cluster Name</th>
        <th>Cluster Status</th>
        <th>Cluster Details</th>
        <th>IPM</th>
      </thead>
      <tbody>
        {{#each}}
          <tr>
            <td>{{name}}</td>
            <td>{{status}}</td>
            <td>{{{details}}}</td>
            <td>
              {{#each ipms}}
                {{name}}
              {{else}}
                Not assigned
              {{/each}}
            </td>
          </tr>
        {{/each}}
        {{#each unassignedIpms}}
          <tr>
            <td>N/A</td>
            <td></td>
            <td>{{name}}</td>
            <td>{Attach to cluster}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
