<div {{bind-attr class="viewName :wrapper :skin-blue"}}>
  <aside class="right-side strech">
    <section class="content-header">
      <h1>
        {{capitalize-text viewName}}
        <small>Control panel</small>
      </h1>
      <ol class="breadcrumb">
        <li>{{#link-to "application"}}<i class="fa fa-dashboard"></i> Home{{/link-to}}</li>
        <li class="active">{{capitalize-text viewName}}</li>
      </ol>
    </section>
    <section class="content">
      <div class="row">
        <section class="col-md-6" {{action "goToInfrastructure"}}>
          {{render "cloudController"}}
          {{render "vms"}}
        </section>
        <section class="col-md-6" {{action "goToClouds"}}>
          {{render "clusters"}}
          {{render "ipms"}}
        </section>
      </div>
    </section>
  </aside>
</div>
