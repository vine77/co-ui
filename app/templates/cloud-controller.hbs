<div class="box box-success">
  <div class="box-header">
    <i class="fa fa-desktop"></i>
    <h3 class="box-title">Hardware</h3>
  </div>
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Version</th>
          <th class="actions-column show-when-expanded">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>SAA host</td>
          <td>{{coVersion}}</td>
          <td class="actions-column show-when-expanded">
            <div class="btn-group">
              <button {{action "reboot"}} type="button" class="btn btn-sm btn-success">Reboot</button>
              <button type="button" class="btn btn-sm btn-success dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><a {{action "shutdown"}}>Graceful Shutdown</a></li>
              </ul>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
