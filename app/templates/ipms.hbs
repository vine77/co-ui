<div class="box box-primary">
  <div class="box-header">
    <i class="fa fa-cloud"></i>
    <h3 class="box-title">IPMs</h3>
  </div>
  <div class="box-body table-responsive no-padding">
    <table class="table table-hover">
      <thead>
        <th>IPM Name</th>
        <th>IPM Status</th>
        <th>Cluster</th>
        <th>Actions</th>
      </thead>
      <tbody>
        {{#each}}
          <tr>
            <td>{{name}}</td>
            <td>{{statusMessage}}</td>
            <td>
              {{#if cluster}}
                {{cluster.name}}
              {{else}}
                Not assigned
              {{/if}}
            </td>
            <td>
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-primary">Unattach IPM</button>
                <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Attach IPM</a></li>
                </ul>
              </div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
