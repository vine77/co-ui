<div id="horizon" class="wrapper skin-blue" {{bind-attr style=horizonStyle}}>
  <aside class="right-side strech">
    {{#if isFrameEnabled}}
      <iframe {{bind-attr src="horizonSrc"}} class="iframe-content"></iframe>
    {{/if}}
    <section class="content-header">
      <h1>
        Horizon
        <small>OpenStack Dashboard</small>
      </h1>
      <a {{bind-attr href=horizonSrc}} class="hint--top" data-hint="Open in new window" target="_blank">
        <i class="fa fa-external-link"></i>
      </a>
      <ol class="breadcrumb">
        <li>{{#link-to "application"}}<i class="fa fa-dashboard"></i> Home{{/link-to}}</li>
        <li class="active">Horizon</li>
      </ol>
    </section>
    {{#unless isFrameEnabled}}
      {{partial "app/-disabled-app"}}
    {{/unless}}
  </aside>
</div>
