<div class="box">
  <div class="box-header">
    <h3 class="box-title">Configure Mail Server</h3>
  </div>
  <form {{action "save" on="submit"}} class="form-horizontal" role="form">
    <div class="box-body">
      <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Hostname</label>
        <div class="col-sm-10">
          {{input class="form-control" placeholder="Hostname or IP address" autofocus="autofocus"}}
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Port</label>
        <div class="col-sm-10">
          {{input class="form-control" placeholder="Port"}}
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-10">
          {{input class="form-control" placeholder="Username"}}
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          {{input type="password" class="form-control" placeholder="Password"}}
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">
          Email
          <span class="hint--top" data-hint="The &quot;From:&quot; address as sent to recipients from the mail server">
            <a class="has-tooltip"><i class="fa fa-question-circle"></i></a>
          </span>
        </label>
        <div class="col-sm-10">
          {{input class="form-control" placeholder="Email address"}}
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">
          Test
          <span class="hint--top" data-hint="Send a test email to the email address listed above">
            <a class="has-tooltip"><i class="fa fa-question-circle"></i></a>
          </span>
        </label>
        <div class="col-sm-10">
          {{#unless isTestEmailActionPending}}
            <button class="btn btn-primary" type="button" {{action "testEmail"}}>Send Test Email</button>
          {{else}}
            <a class="btn btn-primary" disabled="disabled"><i class="icon-spinner icon-spin"></i> Sending Test Email...</a>
          {{/unless}}
        </div>
      </div>
    </div>
    <div class="box-footer clearfix">
      <div class="pull-right">
        {{#unless isActionPending}}
          <a class="btn btn-default" type="button" {{action "cancel"}}>Cancel</a>
          <input class="btn btn-primary" type="submit" value="Save" {{action "save"}}></input>
        {{else}}
          <a class="btn btn-primary disabled"><i class="icon-spinner icon-spin"></i> Saving...</a>
        {{/unless}}
      </div>
    </div>
  </form>
</div>
